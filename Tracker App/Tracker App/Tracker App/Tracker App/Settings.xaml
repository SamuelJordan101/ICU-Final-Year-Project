<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Tracker_App.Settings"
             BackgroundImageSource="Background.png"
             BackgroundColor="White">
    
    <ContentPage.Content>
        <StackLayout>
            <StackLayout BackgroundColor="LightBlue">
                <Label Text="Settings" TextColor="Black"  HorizontalOptions="Center" FontSize="40" Padding="20,20,20,20"></Label>
            </StackLayout>

            <ScrollView Margin="0,0,0,20">
                <Frame CornerRadius="5" Margin="10,0,10,10">
                    <StackLayout>
                        <Label Text="Account Settings" FontSize="20" Padding="0,0,0,10"></Label>
                        <Button x:Name="LogoutButton" Text="Log Out" BackgroundColor="Red" TextColor="White" Padding="0,20,0,20" Clicked="Logout_Button"></Button>

                    </StackLayout>
                </Frame>
            </ScrollView>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>