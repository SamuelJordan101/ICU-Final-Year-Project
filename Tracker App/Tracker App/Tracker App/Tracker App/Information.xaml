<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Tracker_App.Information"
             BackgroundImageSource="Background.png"
             BackgroundColor="White">
    
    <ContentPage.Content>
        <StackLayout HorizontalOptions="Center">
            <StackLayout BackgroundColor="LightBlue">
                <Label Text="Who/Where Am I?" TextColor="Black"  HorizontalOptions="Center" FontSize="40" Padding="20,20,20,20"></Label>
            </StackLayout>

                <ScrollView Margin="0,0,0,20">
                <Frame CornerRadius="5" Margin="10,0,10,10" BackgroundColor="WhiteSmoke">
                    <StackLayout>
                        <Label Text="Name: Susan Jones" x:Name="Name" FontSize="25" ></Label>
                        <Label Text="Medical Centre: Derriford Hospital" x:Name="Hospital" FontSize="25"></Label>
                        <Label Text="Ward Location: Intensive Care Unit (ICU)" x:Name="Ward" FontSize="25"></Label>
                        <Label Text="Admission Date: 15/01/2021" x:Name="Date" FontSize="25"></Label>

                        <Grid Padding="0,10,0,0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="250"></RowDefinition>
                            </Grid.RowDefinitions>

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"></ColumnDefinition>
                            </Grid.ColumnDefinitions>

                            <Image x:Name="Hospital_Image" Aspect="AspectFit"></Image>
                        </Grid>
                    </StackLayout>
                </Frame>
            </ScrollView>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>