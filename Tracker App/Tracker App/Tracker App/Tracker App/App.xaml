<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Tracker_App.App">
    <Application.Resources>
        <Style TargetType="Label">
            <Setter x:Name="LabelEdit" Property="TextColor" Value="Black" />
        </Style>

        <Style TargetType="Button">
            <Setter x:Name="ButtonEdit" Property="TextColor" Value="Black" />
        </Style>

        <Style TargetType="Frame">
            <Setter x:Name="FrameEdit" Property="BackgroundColor" Value="WhiteSmoke" />
        </Style>
    </Application.Resources>
</Application>